extends _layout.pug

block content
    section.page-section.page-section--about#about
        h1!= parseFivebyfive('__index.title')
        p!= parseFivebyfive('__index.intro.paragraph1.a', '__index.intro.paragraph1.b')
        p!= parseFivebyfive('__index.intro.paragraph2.a', '__index.intro.paragraph2.b')

    a.down-button.down-button--hidden(data-scroll-to='#shop')
        i.ri-shopping-cart-fill
        i.ri-arrow-down-s-line

    section.page-section.page-section--shop#shop
        h2.fade-in= __('index.shop-title')
        #spreadshop.fade-in
            a(href='https://shop.spreadshirt.se/kallesurf')


    script.
        var spread_shop_config = {
            shopName: 'kallesurf',
            locale: '!{ language.replace('-', '_') }',
            prefix: 'https://shop.spreadshirt.se',
            baseId: 'spreadshop',
            startToken: '#all',
            swipeMenu: true
        };

    script(type="text/javascript", src="https://shop.spreadshirt.se/shopfiles/shopclient/shopclient.nocache.js")

    script(src='/js/main.js')